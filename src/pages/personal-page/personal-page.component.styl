.container {
    display: flex
    flex-direction: row
}

.info_part {
    lost-column: 2 / 3
    display: flex
    flex-direction: column

    // lost-flex-container: column
    // display: flex
    // flex-direction: row
    .user_name {
        font-size: var(--theme-size-h1)
    }

    .college {
        font-size: var(--theme-size-h5)
        margin-bottom: 50px
    }

    .number_part {
        display: flex
        flex-direction: row

        .download_part {
            lost-column: 1 / 3

            .down_title {
                font-size: var(--theme-size-h4)
            }

            .down_num {
                font-size: var(--theme-size-h2)
            }
        }

        .money_part {
            lost-column: 2 / 3

            .money_title {
                font-size: var(--theme-size-h4)
            }

            .money_num {
                font-size: var(--theme-size-h2)
            }
        }

        margin-bottom: 50px
    }

    .href_part {
        // lost
    }

    .recent_part {
        // display: flex
        // flex-direction: column
        .recent_head {
            display: flex
            flex-direction: row

            .recent_title {
                lost-column: 3 / 4
            }

            .recent_more {
                margin: 30px
                lost-align: middle-right
                lost-column: 1 / 4
            }
        }

        .recent_subject {
            lost-column: 1 / 1
        }
    }
}

.right {
  lost-column: 1 / 3
  display: block
  height: auto

  .right-wrapper {
    margin-top: var(--theme-pad-06)
    position: sticky
    top: var(--theme-pad-06)
  }
}

.line {
  background-color: var(--theme-accept)
  width: 60%
  height: 1px
}

.summary {
}

.toc-fat {
  position: relative
  padding-top: var(--theme-pad-02)
  font-family: Sarasa Gothic SC
  font-style: normal
  font-weight: bold
  font-size: var(--theme-size-base)
  display: flex
  align-items: flex-end
  color: var(--theme-base00)
}

.toc {
  padding-top: var(--theme-pad-02)
  position: relative
  font-family: Sarasa Gothic SC
  font-style: normal
  font-weight: 500
  font-size: var(--theme-size-base)
  display: flex
  align-items: flex-end
  font-feature-settings: 'zero' on
  color: var(--theme-base03)
  &:hover {
    color var(--theme-accept)
  }
}
