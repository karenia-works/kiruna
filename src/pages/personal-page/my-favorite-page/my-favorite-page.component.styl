.container {
    display: flex
    flex-direction: row
}

.left_part {
    lost-column: 2 / 3
}

.right {
    lost-column: 1 / 3
    display: block
    height: auto

    .right-wrapper {
        margin-top: var(--theme-pad-06)
        position: sticky
        top: var(--theme-pad-06)
    }
}

.line {
    background-color: var(--theme-accept)
    width: 60%
    height: 1px
}

.summary {
}

.toc-fat {
    position: relative
    padding-top: var(--theme-pad-04)
    font-family: Sarasa Gothic SC
    font-style: normal
    font-weight: bold
    font-size: var(--theme-size-base)
    display: flex
    align-items: flex-end
    color: var(--theme-base00)
}

.toc {
    padding-top: var(--theme-pad-02)
    position: relative
    font-family: Sarasa Gothic SC
    font-style: normal
    font-weight: 500
    font-size: var(--theme-size-base)
    display: flex
    align-items: flex-end
    font-feature-settings: 'zero' on
    color: var(--theme-base03)
}
