.container {
    display: flex
    flex-direction: row
}

.left_part {
    lost-column: 4 / 5
    display: flex
    flex-direction: column

    .model {
        display: flex
        flex-direction: row

        .pic {
            .image {
                width: 100px
                height: 100px
            }

            margin-right: 30px
        }

        .label {
            lost-column: 2 / 3

            .name {
                font-size: var(--theme-size-h3)
            }

            .from {
                margin-top: 20px
            }
        }

        .button {
            lost-align: bottom-right
            lost-column: 1 / 3
        }

        margin: 30px
    }

    .pager {
    }
}

.right_part {
    lost-column: 1 / 5
    position: sticky
    top: var(--theme-pad-05)

    .line {
        width = 100%
    }

    .func_t {
        color: var(--palette-base05)
        margin-top: 5px
    }

    .func_h {
        color: var(--palette-base03)
        margin-top: 5px
    }
}