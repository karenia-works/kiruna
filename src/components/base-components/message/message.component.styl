.messages-overlay {
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  pointer-events: none
  display: flex
  flex-direction: row
  justify-content: flex-end
  align-items: flex-end
  z-index: 1000
}

.message-wrapper {
  width: 30vw
  max-width: 560px
  min-width: 240px
  display: flex
  flex-direction: column-reverse
  align-items: stretch
  overflow: hidden
  margin: var(--theme-pad-02)
}

.msg {
  pointer-events: auto
  user-select: none
  display: flex
  flex-direction: row
  background: var(--theme-base07)
  border: 0px solid var(--msg-accent-color)
  border-top-width: 8px
  padding: var(--theme-pad-02)
  margin: var(--theme-pad-02)

  .btn-ghost {
    color: var(--msg-accent-color)
  }

  &.info {
    --msg-accent-color: var(--theme-info)
  }

  &.warn {
    --msg-accent-color: var(--theme-warn)
  }

  &.success {
    --msg-accent-color: var(--theme-accent)
  }

  --msg-accent-color: var(--theme-accent)

  &.error {
    --msg-accent-color: var(--theme-error)
  }
}
